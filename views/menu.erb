<style>
nav {
  background: #444;
  color: #fff;
  font-weight: bold;
}
	nav ul {
    list-style: none;
    margin: 0;
    padding: 0;
    background: #444;
    overflow: hidden;
  }
  nav li {
    float: left;
  }
  nav a {
    text-decoration: none;
    display: block;
    padding: 8px;
    background: #444;
    color: #fff;
  }

</style>
</head>
<body>
  <header>
    <h1><%= title %></h1>
    <%= erb :nav %>
  </header>
</body>
</html>